<!DOCTYPE html>
<html>
    <head>
        <title><%= season.name %></title>
        <meta http-equiv="X-UA-COMPATIBLE" content="IE=edge"/>
        <meta name="viewport" content="width = device-width, initial-scale = 1"/>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel='stylesheet' href='/stylesheets/navigation-bar.css' />
        <link rel='stylesheet' href='/stylesheets/episodes.css' />
        <link rel="stylesheet" type="text/css" href="/javascripts/bootstrap-3.3.7-dist/css/bootstrap.min.css">
    </head>
    <body style="background-color: black">
        <% include ../templates/navigation-bar.ejs %>
        <div class="container season-episodes-container">
            <h1 class="title page-header"><%= season.name %></h1>
            <div class="row">
                <% episodesList.forEach(function(episode){ %>
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                    <a href="/episodes/season<%= season.name.charAt(season.name.length-1)%>/episode<%= episode.number %>">
                        <h3 class="episode-name">Episode <%= episode.number%>: <%= episode.title %></h3>
                        <img src="<%= episode.imgUrl %>" alt="Episode Image" class="img-thumbnail center-block">
                    </a>
                </div>
                <% }); %>
            </div>
        </div>
        <script src="/javascripts/jquery/2.1.3/jquery.min.js"></script>
        <script src="/javascripts/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    </body>
</html>