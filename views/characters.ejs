<!DOCTYPE html>
<html>
    <head>
        <title>Characters</title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel='stylesheet' href='/stylesheets/navigation-bar.css' />
        <link rel='stylesheet' href='/stylesheets/characters.css' />
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    </head>
    <body style="background-color: black">
        <% include templates/navigation-bar.ejs %>
        <div class="container body-content-container">

            <div class="row">
                <% charactersList.forEach(function(character){ %>
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 character-container">
                    <a href="/characters/<%= character.url%>">
                        <img src="/images/<%= character.name %>.png" alt="Character Image" class="character-image img-rounded center-block">
                    </a>
                    <p class="character-name text-center"><span class="character-name-span"><%= character.name %></span></p>
                </div>
                <% }); %>
            </div>

        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    </body>
</html>
