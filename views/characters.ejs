<!DOCTYPE html>
<html>
    <head>
        <title>Characters</title>
        <meta http-equiv="X-UA-COMPATIBLE" content="IE=edge"/>
        <meta name="viewport" content="width = device-width, initial-scale = 1"/>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel='stylesheet' href='/stylesheets/navigation-bar.css' />
        <link rel='stylesheet' href='/stylesheets/characters.css' />
        <link rel="stylesheet" type="text/css" href="/javascripts/bootstrap-3.3.7-dist/css/bootstrap.min.css">
    </head>
    <body style="background-color: black">
        <% include templates/navigation-bar.ejs %>
        <div class="container body-content-container">

            <div class="row">
                <% charactersList.forEach(function(character){ %>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12 character-container">
                    <a href="<%= character.pageUrl%>">
                        <img src="<%= character.pictureUrl %>" alt="Character Image" class="character-image img-rounded center-block">
                        <p class="character-title"><%= character.name %></p>
                    </a>
                </div>
                <% }); %>
            </div>

        </div>
        <script src="/javascripts/jquery/2.1.3/jquery.min.js"></script>
        <script src="/javascripts/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    </body>
</html>
