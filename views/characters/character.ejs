<!DOCTYPE html>
<html>
    <head>
        <title></title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel='stylesheet' href='/stylesheets/navigation-bar.css' />
        <link rel='stylesheet' href='/stylesheets/characters.css' />
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    </head>

    <body style="background-color: black">
        <% include ../templates/navigation-bar.ejs %>

        <div class="container body-content-container">
            <img src="<%= characterInfo.pictureUrl %>" class="season-image img-responsive img-thumbnail center-block">

            <div class="page-header">
                <h1 class="title"><%= characterInfo.name %></h1>
                <h1 class="title">Portrayed By <%= characterInfo.portrayedBy %></h1>
            </div>

            <div class="page-header">
                <h2 class="sub-title">Description</h2>
            </div>
            <div class="jumbotron">
                <p><%= characterInfo.description %></p>
            </div>

            <% if(characterInfo.appAndPersonality != "") { %>
                <div class="page-header">
                    <h2 class="sub-title">Appearance and Personality</h2>
                </div>
                <div class="jumbotron">
                    <p><%= characterInfo.appAndPersonality %></p>

                </div>
            <% } %>

            <% if(characterInfo.history != "") { %>
                <div class="page-header">
                    <h2 class="sub-title">History</h2>
                </div>
                <div class="jumbotron">
                    <p><%= characterInfo.history %></p>
                </div>
            <% } %>

            <% if(characterInfo.trivia.length > 0) { %>
                <div class="page-header">
                    <h2 class="sub-title">Trivia</h2>
                </div>
                <div class="jumbotron">
                    <% characterInfo.trivia.forEach(function(characterTrivia) { %>
                        <p><%= characterTrivia.info %></p>
                    <% }); %>
                </div>
            <% }%>
        </div>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    </body>
</html>